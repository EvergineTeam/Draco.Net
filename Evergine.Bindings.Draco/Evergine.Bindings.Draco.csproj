<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net8.0-ios</TargetFrameworks>
		<Description>Draco Bindings for .NET</Description>
		<PackageTags>Evergine;C#;3D;Draco;GLTF</PackageTags>
		<PackageIcon>icon.png</PackageIcon>
		<RepositoryUrl>https://github.com/EvergineTeam/Draco.Net</RepositoryUrl>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="build\**" PackagePath="build" Visible="true" />
		<Content Include="runtimes\**" PackagePath="runtimes" Visible="true" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Resources\NugetIcon\icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
